<template id="menu-template">
  <li class="menu__item">
    <div class="card">
      <img
        src={{src}}
        alt={{alt}}
        class="card__image"
      />
      <div class="card__content">
        <h2 class="card__name">{{title}}</h2>
        <p class="card__price">
          <i class="material-icons">
            monetization_on
          </i>
          {{price}}
        </p>

        <p class="card__descr">
          {{description}}
        </p>

        <ul class="tag-list">
          <li class="tag-list__item">{{ingredient}}</li>
          <li class="tag-list__item">Чеснок</li>
          <li class="tag-list__item">Сметана</li>
          <li class="tag-list__item">Бекон</li>
          <li class="tag-list__item">Твердый сыр</li>
          <li class="tag-list__item">Зеленый лук</li>
        </ul>
      </div>

      <button class="card__button button">
        <i class="material-icons button__icon">
          shopping_cart
        </i>
        В корзину
      </button>
    </div>
  </li>
</template>
